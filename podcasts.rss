<?php
/* 
 * Redirect requests for podcasts to Live.
 * Make sure that we can handle any protocol;
 * it should be either http or itpc.
 */
$protocol = $_SERVER['SERVER_PROTOCOL'];
$protocol = split('/', $protocol);
$protocol = strtolower($protocol[0]);
header( 'Location: ' . $protocol . '://live.eclipse.org/eclipse_live_podcasts/feeds' ) ;
?>